<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.presentation.ui.animatedLike.AnimatedViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.presentation.ui.animatedLike.AnimatedLikeView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/likeView"
                android:particles="@{model.particlesCount}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:startParticleMaxDistance="@{model.startParticleMaxDistance}"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:id="@+id/guideline2"/>

        <ScrollView
                android:layout_width="395dp"
                android:layout_height="357dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likeView">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="match_parent"
                        android:text="@{@string/particles_count(model.particlesCount * 10)}"
                        tools:text="@string/particles_count"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:progress="@={model.particlesCount}"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@{@string/start_particle_max_distance(model.startParticleMaxDistance * 25)}"
                        tools:text="@string/start_particle_max_distance"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="@={model.startParticleMaxDistance}"/>

            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>