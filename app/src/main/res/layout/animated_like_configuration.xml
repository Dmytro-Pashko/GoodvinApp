<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.presentation.ui.animatedLike.AnimatedViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/heart_size"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.heartSize}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="1.0"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="0.4"
            app:isb_progress_value_float="true"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="16sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/heart_animation_duration"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.heartAnimationDuration}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="2500"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="500"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_adjust_auto="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="12sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/heart_scale_factor"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.heartScaleFactor}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="1.0"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="0.2"
            app:isb_progress_value_float="true"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_adjust_auto="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="12sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/particles_count"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.particlesCount}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="50"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="16sp"
            app:isb_ticks_count="5"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/start_particle_max_distance"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.particleStartDist}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="500"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="50"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="16sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/particle_movement_distance"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.particleMovementDist}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="500"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="50"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="16sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/particle_movement_duration"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.particleMovementDuration}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="2000"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="500"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="14sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/particle_scale_factor"
            android:textSize="18sp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:seekObserver="@{model.particleScaleFactor}"
            app:isb_indicator_text_size="18sp"
            app:isb_max="2.5"
            app:isb_min="0.2"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="1"
            app:isb_progress_value_float="true"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_size="8dp"
            app:isb_tick_marks_size="8dp"
            app:isb_tick_texts_size="14sp"
            app:isb_ticks_count="10"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_size="4dp" />

    </LinearLayout>
</layout>